<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/settingsScrollView"
    android:isScrollContainer="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>
        <requestFocus />

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/first_team"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/first_team_border"
                android:layout_margin="10dp"
                android:background="@color/Black"
                android:padding="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="10dp"
                    android:maxHeight="10dp"
                    android:minWidth="160dp"
                    android:maxWidth="160dp"
                    android:textColor="@color/Black"
                    android:textSize="35sp"
                    android:textAlignment="center"
                    android:background="@color/White"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxLength="8"
                    android:id="@+id/rename_N"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>


            <CheckBox android:id="@+id/checkbox_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/second_team"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/second_team_border"
                android:background="@color/Black"
                android:padding="5dp"
                android:layout_margin="10dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="10dp"
                    android:maxHeight="10dp"
                    android:minWidth="160dp"
                    android:maxWidth="160dp"
                    android:textColor="@color/Black"
                    android:textSize="35sp"
                    android:textAlignment="center"
                    android:background="@color/White"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxLength="8"
                    android:id="@+id/rename_V"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <CheckBox android:id="@+id/checkbox_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

         <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorButton"
            android:layout_gravity="center_horizontal"
            android:text="Color"
            android:onClick="ChangeColor"
            />

         <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_gravity="center_horizontal"
         android:id="@+id/buttons"
         android:layout_marginTop="200dp">

             <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelButton"
                android:layout_gravity="center_horizontal"
                android:text="Cancel"
                android:onClick="FinishActivity"
                />

             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/okButton"
                 android:layout_gravity="center_horizontal"
                 android:text="OK"
                 android:onClick="SaveChanges"
                 />
         </LinearLayout>

    </LinearLayout>

</ScrollView>
